@model IEnumerable<SweetSavory.Models.Treat>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Treat List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Treats" asp-action="Create" class="btn btn-primary"></i> &nbsp; Create New Treat
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Treat Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="20%">@item.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Treats" asp-route-Id="@item.TreatId" asp-action="Edit" class="btn btn-primary mx-2">
                                
                            </a>
                            <a asp-controller="Treats" asp-route-Id="@item.TreatId" asp-action="Delete" class="btn btn-danger mx-2">
                                
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Treat exists.</p>
    }

</div>