@{
    Layout = "_Layout";
}

@using SweetSavory.Models;

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-primary">Treat List</h2>
        </div>
        <div class="col-4">
            <h6 class="text-default">You are logged in as @User.Identity.Name</h6>
        </div>
        <div class="col-4 text-right">
            <p class="btn btn-info">@Html.ActionLink("Add new treat", "Create")</p>
        </div>
    </div>

<br /><br />

@if (@Model.Count == 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    <h3>No Treats have been added yet!</h3>
                </th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
} 
<ul>
@foreach(Treat treat in Model)
{
<tr>
    <td width="50%"><p>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</p></td>
</tr>
}
</ul>

@using (Html.BeginForm("LogOff", "Account"))
{
<input type="submit" class="btn btn-default" value="Log out" />
}
