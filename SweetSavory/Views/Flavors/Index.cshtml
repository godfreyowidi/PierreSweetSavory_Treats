@model IEnumerable<SweetSavory.Models.Flavor>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Flavor List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"></i> &nbsp; Create New Flavor
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Flavor Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flav in Model)
                {
                <tr>
                    <td width="80%">@flav.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Flavors" asp-route-Id="@flav.FlavorId" asp-action="Create" class="btn btn-primary mx-2">
                            </a>
                            <a asp-controller="Flavors" asp-route-Id="@flav.FlavorId" asp-action="Delete" class="btn btn-danger mx-2">
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Flavors exists.</p>
    }

</div>