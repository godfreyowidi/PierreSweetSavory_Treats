@{
    Layout = "_Layout";
}

@using SweetSavory.Models;
@model IEnumerable<SweetSavory.Models.Flavor>;

<h1>@User.Identity.Name</h1>

@if (@Model.Any())
{
    <ul>
    @foreach (Flavor flavor in Model)
    {  
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })
        </li>
    }
    </ul>
}
else
{
    <h3>No flavors have been added yet!</h3>
} 

<p>@Html.ActionLink("Add new flavor", "Create")</p>


@using (Html.BeginForm("LogOff", "Account"))
{
<input type="submit" class="btn btn-default" value="Log out" />
}