@{
    Layout = "_Layout";
}

@using SweetSavory.Models;
@model IEnumerable<SweetSavory.Models.Flavor>;

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Flavor List</h2>
        </div>
        <div class="col-6 text-right">
            <p class="btn btn-info">@Html.ActionLink("Add new flavor", "Create")</p>
        </div>
    </div>
</div>

<br />

@if (@Model.Any())
{
    <ul>
    @foreach (Flavor flavor in Model)
    {  
        <p>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</P>
    }
    </ul>
}
else
{
    <h3>No flavors have been added yet!</h3>
} 

@using (Html.BeginForm("LogOff", "Account"))
{
<input type="submit" class="btn btn-default" value="Log out" />
}