@{
  Layout = "_Layout";
}

@using SweetSavory.ViewModels

@model RegisterViewModel


<div class="row">
    <div class="col-md-4">
        <h4>Register a new user</h4>
        <hr />
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.TextBoxFor(user => user.Email, new { placeholder = "Email", @class ="form-group" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(user => user.Password, new { placeholder = "Password", @class ="form-group" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(user => user.ConfirmPassword, new { placeholder = "ConfirmPassword", @class="form-group" })
            </div>
            <input type="submit" class="btn btn-primary" value="Register" />
        
        }
    </div>
</div>

<p>@Html.ActionLink("Log in", "Login")</p>

